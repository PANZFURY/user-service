<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet author="postgres"  id="create-payment-cards">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="payment_cards"/>
            </not>
        </preConditions>
        <createTable tableName="payment_cards">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="number" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="holder" type="VARCHAR(255)"/>
            <column name="expiration_date" type="DATE"/>
            <column name="active" type="BOOLEAN" defaultValue="true"/>
        </createTable>
        
        <addForeignKeyConstraint
                baseTableName="payment_cards"
                baseColumnNames="user_id"
                constraintName="fk_payment_cards_users"
                referencedTableName="users"
                referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>